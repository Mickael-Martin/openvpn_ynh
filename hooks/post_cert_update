#!/bin/bash
source /usr/share/yunohost/helpers
source /etc/yunohost/apps/openvpn/scripts/_common.sh
pwd

export domain=$1
export app=openvpn
export local_path=/var/www/$app

installedDomain=$(ynh_app_setting_get $app domain)
if [ "$domain" == "$installedDomain" ];then
   update_ca_cert
   systemctl openvpn restart
fi
